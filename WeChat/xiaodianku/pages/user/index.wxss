.header {
	border-radius: 10rpx;
	background-image: linear-gradient(135deg, #ff9a44 0%, #fc6076 100%);
	box-shadow: 0rpx 5rpx 15rpx rgba(252, 96, 118, .4);
	height: 240rpx;
	margin: 30rpx 30rpx;
	display: flex;
	align-items: center;
}

.header .image {
	margin-left: 20rpx;
	position: relative;
}

.header image {
	height: 120rpx;
	width: 120rpx;
	border-radius: 50%;
	border: 6rpx solid white;
}

.header .bottom {
	background: orange;
	border-radius: 50%;
	color: #fff;
	font-size: 20rpx;
	width: 30rpx;
	height: 30rpx;
	position: absolute;
	right: 0rpx;
	bottom: 30rpx;
	text-align: center;
}

.header .text {
	margin-left: 30rpx;
}

.header .title {
	margin-bottom: 30rpx;
	color: white;
	font-size: 40rpx;
}

.header .detail {
	font-size: 20rpx;
	color: rgba(255, 255, 255, .7);
}

.countlist {
	text-align: center;
}

.menulist {
	text-align: center;
}

.countlist .itembackground {
	width: 25%;
	display: inline-block;
	padding: 20rpx 0;
}

.countlist .countitem .title {
	display: block;
	margin-bottom: 5rpx;
	font-size: 35rpx;
}

.countlist .countitem .detail {
	font-size: 24rpx;
}

.menulist .itembackground {
	width: 33%;
	display: inline-block;
	font-size: 24rpx;
	padding: 50rpx 0;
}

.menulist .menuitem image {
	width: 50rpx;
	height: 50rpx;
	margin-bottom: 10rpx;
}

.version {
	text-align: center;
	font-size: 24rpx;
	color: #666;
	padding-bottom: 160rpx;
}

.help {
	position: fixed;
	bottom: 30rpx;
	left: 30rpx;
	right: 30rpx;
	height: 100rpx;
	border-radius: 60rpx;
	background: white;
	box-shadow: 0px 0px 20px #ddd;
	display: flex;
	align-items: center;
}

.help .head {
	margin-left: 30rpx;
	margin-top: 10rpx;
	width: 40rpx;
}

.help .text {
	margin-left: 30rpx;
}

.help .text .title {
	font-size: 22rpx;
	margin-bottom: 10rpx;
	display: block;
}

.help .text .detail {
	display: block;
	font-size: 18rpx;
}

.help .text .detail .detail-button {
	display: inline-block;
	color: #bbb;
	padding: 2rpx 6rpx;
	margin-right: 5rpx;
	border: 1rpx solid #bbb;
	border-radius: 8rpx;
}